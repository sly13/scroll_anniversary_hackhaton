{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strict": true // Включает строгую проверку типов
  },
  "include": [
    "src/**/*.ts",
    "src/modules/player-score/entities/player-score.entity.ts"
  ], // Указывает, какие файлы включать
  "exclude": ["node_modules", "dist"] // Исключает папки, которые не нужно компилировать
}
